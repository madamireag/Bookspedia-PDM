<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Echipa07.AboutPage"
             Title="About Bookspedia">
    <ScrollView Orientation="Vertical">
        <StackLayout BackgroundColor="#D8BFD8">
            <Image Source="books.png"   WidthRequest="128" HeightRequest="128" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            <Label
                   Text="What I will read today?" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Label
                   Text="The Bookspedia application offers you a varied list of books with price details, people rating and more." 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   TextColor="White"/>
            <Label
                   Text="More than that, you can search for any book and add it to your favorite list!" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>